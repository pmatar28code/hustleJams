<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/item_workout_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_stop"
        app:layout_constraintEnd_toStartOf="@+id/item_workout_name"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </ImageView>

    <TextView
        android:id="@+id/item_workout_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:text="test"
        android:textAlignment="center"
        app:layout_constraintEnd_toStartOf="@+id/workouts_item_delete_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_workout_image"
        app:layout_constraintTop_toTopOf="@+id/item_workout_image"
        app:layout_constraintBottom_toBottomOf="@+id/item_workout_image">

    </TextView>

    <Button
        android:id="@+id/workouts_item_delete_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Del"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toTopOf="@+id/item_workout_image"
        app:layout_constraintBottom_toBottomOf="@+id/item_workout_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/item_workout_name"
        >

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>